<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- Search Styles -->
    <style name="AppTheme.SearchTextViewPrice" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/listing_price_active</item>
    </style>

    <style name="AppTheme.SearchTextViewFeatures" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/listing_features_active</item>
    </style>

    <style name="AppTheme.SearchTextViewLocation" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/listing_location_active</item>
    </style>


    <!-- Listing card Styles -->
    <style name="AppTheme.ListingCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/cardview_listing_margin</item>
        <item name="android:padding">@dimen/cardview_listing_padding</item>
    </style>

    <style name="AppTheme.ListingCardNormal" parent="AppTheme.ListingCard">
        <item name="cardBackgroundColor">@color/listing_background</item>
    </style>

    <style name="AppTheme.ListingCardElite" parent="AppTheme.ListingCard">
        <item name="cardBackgroundColor">@color/listing_background</item>
    </style>



</resources>
